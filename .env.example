# SSH Configuration
SSH_PORT=2222
SSH_ADMIN_USERS=admin1,admin2

# Security Settings
SSH_MAX_AUTH_TRIES=3
SSH_CLIENT_ALIVE_INTERVAL=300
SSH_LOGIN_GRACE_TIME=60
SSH_MAX_SESSIONS=10

# Feature Flags
ENABLE_FAIL2BAN=true
ENABLE_FIREWALL=true
ENABLE_ROOT_LOGIN=false
ENABLE_PASSWORD_AUTH=false

# Backup Settings
BACKUP_DIRECTORY=/root/security_backups

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/ssh-hardener.log